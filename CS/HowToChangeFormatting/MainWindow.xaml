<Window x:Class="HowToChangeFormatting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="476" Width="525" xmlns:dxre="http://schemas.devexpress.com/winfx/2008/xaml/richedit">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <dxre:RichEditControl Name="richEditControl1"
                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                              Grid.Column="1"/>
        <Button Name="btn_FormatChar"
                Margin="12,12,12,0" Height="23" Width="106" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Grid.Column="0"
                Content="Format Characters" Click="btn_FormatChar_Click" />
        <Button Name="btn_FormatParagraph"
                Margin="12,47,12,0" Height="23" Width="106"
                HorizontalAlignment="Left"  VerticalAlignment="Top"
                Grid.Column="0"
                Content="Format Paragraph" Click="btn_FormatParagraph_Click" />
    </Grid>
</Window>
